<h3>Add punchlist item:</h3>

<% form_for(punchlist) do |f| %>
  <%= f.error_messages %>

    <%= f.hidden_field :box_id %>
  <p>
    <%= f.label :department_id %><br />	
	<%= collection_select(:punchlist, :department_id, Department.all, :id, :name) %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :material %><br />
    <%= f.text_field :material %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Add' %>
  </p>
<% end %>
